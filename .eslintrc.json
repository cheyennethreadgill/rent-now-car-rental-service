{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "react/function-component-definition": [
      2,
      { "namedComponents": "arrow-function" }
    ],
    "arrow-body-style": ["error", "always"]
  }
}
